<!DOCTYPE html>
<html lang="en">
<head>
	<%- include('../partials/head') %>
</head>
<body>
	<section class="container">
		<div class="row justify-content-center pt-4">
			<div class="col-10">
				<a href="/form">Agregar Productos</a>
				<h1>Vista de productos</h1>
				<% if(data.length > 0){ %>
					<table class="container">
						<tr class="row">
							<th class="col-3 align-self-center">Nombre</th>
							<th class="col-3 align-self-center">Precio</th>
							<th class="col-3 align-self-center">Thumbnail</th>
						</tr>
						<% data.forEach(function(dato) { %>
						<tr class="row">
							<td class="col-3 align-self-center"><%= dato.name %></td>
							<td class="col-3 align-self-center"><%= dato.price %></td>
							<td class="imagen col-3 align-self-center">
							<% if(dato.thumbnail){ %>
								<img src= <%= dato.thumbnail %> alt="">
							<% } %>
							</d>
						</tr>
						<% }); %>
					</table>
				<% } else{ %>
					<div class="aviso">
						No hay productos para mostrar
					</div>
				<% } %>
			</div>
		</div>
	</section>
	<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
</body>